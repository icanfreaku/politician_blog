.task-list
    margin: auto
    width: 500px
    margin-top: 100px

    form
        button
            margin-top: 10px

    .task
        position: relative

        a + a
            margin-right: 5px


        a:hover i
            font-weight: bold

        .remove
            position: absolute
            right: 5px
            top: 5px
            color: red
        .edit
            position: absolute
            right: 20px
            top: 5px
            color: blue

.top10
    .thumbnail
        width: 50px
        height: 50px
        display: inline
        margin: 0px
        margin-right: 10px
        margin-left: 10px
.socicon
    .socicon-list
        font-size: 27px

        li
          display: inline
          a:hover i
              text-decoration: none
